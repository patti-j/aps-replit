@using Microsoft.AspNetCore.Components

<div class="toggle-switch py-2">
    <span>@ToggleText</span>
    <label class="switch">
        <input type="checkbox" checked="@IsToggled" @onchange="Toggle">
        <span class="slider round"></span>
    </label>
</div>

@code {
    [Parameter]
    public bool IsToggled { get; set; }

    [Parameter]
    public string ToggleText { get; set; } = "";

    [Parameter]
    public EventCallback<bool> OnToggle { get; set; }

    private void Toggle()
    {
        IsToggled = !IsToggled;
        OnToggle.InvokeAsync(IsToggled);
    }
}
<style>
    /* Toggle Switch CSS */
    .toggle-switch {
        display: flex;
        align-items: center;
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 22px; 
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 22px; /* Full height for circular edges */
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px; /* Reduced for smaller slider */
            width: 18px; /* Reduced for smaller slider */
            left: 2px; /* Adjusted for smaller slider */
            bottom: 2px; /* Adjusted for smaller slider */
            background-color: white;
            transition: .4s;
            border-radius: 50%; /* Circular shape */
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

        input:checked + .slider:before {
            transform: translateX(18px); /* Adjusted for smaller slider */
        }

</style>