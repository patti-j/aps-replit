@page "/savedGanttsViewer"
@using ReportsWebApp.DB.Services.SchedulerHelpers
@inject ISchedulerFavoritesService favoritesService
@inject NavigationManager navigationManager

@if (viewPermission)
{
    <h3>Favorites Gantt Management</h3>
    @if (!isPrerendering)
    {
        <FavoriteGrid LoadFavoriteFunc="OnSchedulerFavoriteLoaded" CreatedByMeOnly="true" />
    }
    else
    {
        <p>Loading...</p>
    }
}

@code {
    private bool isPrerendering = true; // Assume prerendering by default
    [Inject]
    IUserService userService { get; set; }
    private bool viewPermission = false;

    protected override async Task OnInitializedAsync()
    {
        var user = await userService.GetCurrentUserAsync(AuthenticationStateProvider);
        if (Shared.Utils.BlockUsersByAuthStatus(user, null, NavigationManager)) return;
        viewPermission = true;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            isPrerendering = false; // No longer prerendering after the first render
            StateHasChanged(); // Re-render the component
        }
    }

    // This method handles the loading of a scheduler disk image.
    private void OnSchedulerFavoriteLoaded(GanttFavoriteData favorite)
    {
        // Ensure not to navigate during prerendering
        if (!isPrerendering && favorite != null)
        {
            navigationManager.NavigateTo($"/scheduler/{favorite.id}");
        }
    }
}
